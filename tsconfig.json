{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["ES2017"],
    "baseUrl": ".",
    "paths": {
      "Components/*": ["src/components/*"],
      "Assets/*": ["src/assets/*"],
      "Routes/*": ["src/routes/*"],
      "Pages/*": ["src/pages/*"],
      "Styles/*": ["src/styles/*"]
    },
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": false
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
